	function hoja_hr_reset () {
		global $hoja_hr_flag;
		$hoja_hr_flag = false;
	}
	
	function hoja_hr () {
		global $hoja_hr_flag;
		
		if ( $hoja_hr_flag )
			return "";
		else {
			$hoja_hr_flag = true;
			return ' class="hr"';
		}
	}
	
	
	