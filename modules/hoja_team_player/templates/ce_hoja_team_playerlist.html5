	function getFrontendUrl( $pageId , $params )
	{
		global $objPage;
		$retval = "";

		if ( ( $jumpTo = \PageModel::findByPk( $pageId ) ) !== null )
		{
			$retval = \Controller::generateFrontendUrl( $jumpTo->row() );
			$retval .= ( strstr( $retval , "?" ) ? "&" : "?" ) . $params;
		}

		return $retval;
	}

?>






